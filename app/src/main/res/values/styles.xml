<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorwhite</item>
        <item name="colorControlNormal">@color/colorwhite</item>

    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#777777</item>
        <item name="colorControlActivated">#EAD202</item>
    </style>


    <style name="LogInTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorBlue</item>
        <item name="colorAccent">@color/colorblack</item>
        <item name="android:textColorHint">@color/colorblack</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorBlue</item>
    </style>

    <style name="FirebaseUI.Button.AccountChooser.EmailButton"  >
        <item name="android:drawableLeft">@drawable/mail</item>
        <item name="android:textColor">@color/colorblack</item>
        <item name="android:background">@drawable/login_button</item>
        <item name="android:drawableTint">@color/colorblack</item>
    </style>

    <style name="FirebaseUI.Button.AccountChooser.PhoneButton">
        <item name="android:drawableLeft">@drawable/phone</item>
        <item name="android:drawableTint">@color/colorblack</item>
        <item name="android:textColor">@color/colorblack</item>
        <item name="android:background">@drawable/login_button</item>

    </style>




</resources>