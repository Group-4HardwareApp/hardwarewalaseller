<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colormaroon</item>
        <item name="colorControlNormal">@color/colorwhite</item>
    </style>


    <style name="error_appearance"  parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/error_color</item>
    </style>



    <style parent="FirebaseUI" name="LogInTheme">

        <item name="colorPrimary">@color/chrome_yellow</item>
        <item name="colorPrimaryDark">@color/chrome_yellow</item>
        <item name="colorAccent">@color/chrome_yellow</item>
        <item name="android:background">@color/chrome_yellow</item>
        <item name="android:textColorHint">@color/black</item>
    </style>


</resources>